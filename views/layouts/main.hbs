                class="nav-link {{#menuSuperior 'active' '/admin/servicos/create' '/admin/servicos/index'}}{{/menuSuperior}}">
                <i class="fas fa-fw fa-broom"></i>
                <p>
                  Cadastro de Serviços
                  <i class="right fas fa-angle-left"></i>
                </p>
              </a>
              <ul class="nav nav-treeview">
                <li class="nav-item">
                  <a href="/admin/servicos/index"
                    class="nav-link {{#menuSubItem '/admin/servicos/index'}}{{/menuSubItem}}">
                    <i class="fas fa-fw fa-list"></i>
                    <p>Lista de Serviços</p>
                  </a>
                </li>
              </ul>
              <ul class="nav nav-treeview">
                <li class="nav-item">
                  <a href="/admin/servicos/create"
                    class="nav-link {{#menuSubItem '/admin/servicos/create'}}{{/menuSubItem}}">
                    <i class="fas fa-fw fa-file"></i>
                    <p>Novo Serviço</p>
                  </a>
                </li>
              </ul>
            </li>
            <li
              class="nav-item has-treeview {{#menuSuperior 'menu-is-opening menu-open' '/admin/usuarios/create' '/admin/usuarios/index'}}{{/menuSuperior}}">

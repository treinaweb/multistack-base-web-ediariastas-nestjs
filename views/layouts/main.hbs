                <li class="nav-item">
                  <a href="/admin/usuarios/create"
                    class="nav-link {{#menuSubItem '/admin/usuarios/create'}}{{/menuSubItem}}">
                    <i class="fas fa-fw fa-file"></i>
                    <p>Novo Usuário</p>
                  </a>
